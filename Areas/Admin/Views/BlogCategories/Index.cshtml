@model IEnumerable<TShop.Models.BlogCategory>

@{
    ViewData["Title"] = "Danh mục Blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Danh mục Blog</h1>

<div class="card">
    <div class="card-header">
        <div class="row flex-between-center">

            <div class="col-sm-auto">
                <a class="btn btn-primary mb-2" asp-action="Create">Thêm danh mục</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="tableExample2" data-list='{"valueNames":["index","name","desc","price","stock","createAt","category","gendercategory"],"page":20,"pagination":true}'>
            <div class="table-responsive scrollbar">
                <table class="table table-bordered table-striped fs--1 mb-0">
                    <thead class="bg-200 text-900">
                        <tr>

                            <th class="sort" data-sort="">
                                Ảnh
                            </th>
                            <th class="sort" data-sort="name">
                                Tên
                            </th>
                            <th class="sort" data-sort="category">
                                Đường dẫn
                            </th>

                        </tr>
                    </thead>
                    <tbody class="list">
                        @if (Model.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td class=""><img src="@Html.DisplayFor(modelItem => item.Thumb)" style="max-width: 80px;" /> </td>

                                    <td class="name">
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.Alias)
                                    </td>
                                    <td>
                                        <div class="dropdown font-sans-serif position-static">
                                            <button class="btn btn-link text-600 btn-sm dropdown-toggle btn-reveal" type="button" id="customer-dropdown-24" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false"><span class="fas fa-ellipsis-h fs--1"></span></button>
                                            <div class="dropdown-menu dropdown-menu-end border py-0" aria-labelledby="customer-dropdown-24">
                                                <div class="bg-white py-2">
                                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.BlogCategoryId">Chỉnh sửa</a>
                                                    <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.BlogCategoryId">Xóa</a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                        <td colspan="3" class="text-center">Không có danh mục nào</td>
                        }

                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-center mt-3">
                <button class="btn btn-sm btn-falcon-default me-1" type="button" title="Previous" data-list-pagination="prev">
                    <span class="fas fa-chevron-left"></span>
                </button>
                <ul class="pagination mb-0"></ul>
                <button class="btn btn-sm btn-falcon-default ms-1" type="button" title="Next" data-list-pagination="next">
                    <span class="fas fa-chevron-right"> </span>
                </button>
            </div>
        </div>
    </div>

</div>