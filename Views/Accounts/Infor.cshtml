@model TShop.Models.Account
@{
    
    Layout = "~/Views/Accounts/_MenuAccountPartial.cshtml";
}
<form method="post" asp-action="UpdateInfor">
    <input type="hidden" asp-for="AccountId" />
    <div class="row">
        <div class="col-md-12 mb-3">
            <label class="form-label mb-0">Họ tên</label>
            <input class="form-control" type="text" asp-for="@Model.FullName" />
        </div>
        <div class="col-md-12 mb-3">
            <label class="form-label">Số điện thoại</label>
            <input class="form-control" asp-for="@Model.Phone" />
        </div>
        <div class="col-md-12 mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" asp-for="@Model.Email" disabled/>
                
        </input>
        <div class="col-md-12 mb-3">
            <label class="form-label">Sinh nhật</label>
            <input class="form-control" type="date" asp-for="@Model.Birthday"/>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn__add" type="submit">Lưu thay đổi</button>
    </div>

</form>

