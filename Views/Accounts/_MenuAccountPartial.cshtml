@{
    ViewData["Title"] = "Tài khoản của tôi";
    Layout = "_Layout";
    string ctrName = ViewContext.RouteData.Values["Action"].ToString();

}

<div class="block-page bg-light mb-5">
    <div class="row my-5"> 
        <div class="col-md-3 mb-3">
            <div class="card border-0 " style="box-shadow: 0px 0px 1px rgba(40, 41, 61, 0.08), 0px 0.5px 2px rgba(96, 97, 112, 0.16);">
                <div class="card-body pb-0 px-0">
                    <div class="w-100 text-center mb-3" >
                        <img src="~/TShop/img/icon/user.svg" style="border-radius:100%; width:100px; border:1px solid gray;padding:10px" />
                    </div>
                    <ul class="menu-account nav flex-column">
                        <li class="nav-item  @((ctrName == "Infor" ) ? "active" : "" )">
                            <a asp-controller="Accounts" asp-action="Infor">
                                <div class="d-flex px-2 py-1 align-items-center">
                                    <img src="" />
                                    <span>Thông tin</span>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item  @((ctrName == "Order" ) ? "active" : "" )">
                            <a asp-controller="Accounts" asp-action="Order">
                                <div class="d-flex px-2 py-1 align-items-center">
                                    <img src="" />
                                    <span>Đơn hàng</span>
                                </div>
                            </a>
                        </li>

                        <li class="nav-item border-0 @((ctrName == "Logout" ) ? "active" : "" )">
                            <form asp-controller="Accounts" asp-action="Logout" method="post">
                                    <button class="border-0 px-2 py-1 w-100 text-start" type="submit">
                                        <img src="" /><span>Đăng xuất</span>
                                    </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9 pe-3 mb-5">
            <div class="card border-0" style="box-shadow: 0px 2px 4px rgba(116, 134, 155, 0.08);">
                <div class="card-body ">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>