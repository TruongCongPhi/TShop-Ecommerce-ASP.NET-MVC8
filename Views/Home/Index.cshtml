@model TShop.ViewModels.HomeVM
@{
    ViewData["Title"] = "TShop";
}



<!-- Hero Section Begin -->
<section class="hero">

    <div class="carousel slide carousel-fade" id="carouselExampleFade" data-ride="carousel">
        <div class="carousel-inner rounded">
            <div class="carousel-item active"><img class="d-block w-100" src="TShop/img/hero//hero-1.png" /></div>
            <div class="carousel-item"><img class="d-block w-100" src="TShop/img/hero/hero-2.png" /></div>

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
</section>
<!-- Hero Section End -->
<!-- Banner Ship -->
<div class="benefit bg-white border-bottom">
    <div class="block-page benefit-items">
        <div class="row d-flex justify-content-between">
            <div class="col-lg-4 pe-0">
                <div class="single-benefit">
                    <div class="sb-icon">
                        <img src="~/TShop/img/icon/service1.png" alt="">
                    </div>
                    <div class="sb-text">
                        <h6>Thanh toán khi nhận hàng (COD)</h6>
                        <p>Giao hàng toàn quốc</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="single-benefit">
                    <div class="sb-icon">
                        <img src="~/TShop/img/icon/service2.png" alt="">
                    </div>
                    <div class="sb-text">
                        <h6>Miễn phí giao hàng</h6>
                        <p>Với đơn hàng trên ...</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="single-benefit">
                    <div class="sb-icon">
                        <img src="~/TShop/img/icon/service3.png" alt="">
                    </div>
                    <div class="sb-text">
                        <h6>Đổi hàng miễn phí</h6>
                        <p>Trong 30 ngày kể từ ngày mua</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- Product Section Begin -->
<section class="product spad pt-5">
    <div class="block-product">
        <!-- san pham theo danh muc-->
        <div class="product-slider-container">
            <div class="d-flex justify-content-between align-items-center">
                <p class="title-layout">Hot deal</p>
            </div>

            <div class="product-slider-4 product-slider owl-carousel">
                @await Html.PartialAsync("ProductItem", Model.HotDeal)
            </div>

        </div>

        @foreach (var item in Model.AoPhong)
        {
            <p class="title-layout">@item.TypeCategory.CategoryName</p>
            <div class="carousel" data-bs-ride="carousel">
                <div class="carousel-inner mb-4">
                    <div class="carousel-item active">
                        <img src="~/Tshop/img/banner/ao-phong.png" class="d-block w-100" alt="...">
                    </div>
                </div>
            </div>
            <div class="grid-container-4 grid-container">
                @await Html.PartialAsync("ProductItem", item.ProductTypeCats)
            </div>
            <div class="text-center">
                <a class="btn__add__outline" asp-controller="Product" asp-action="ProductTypeCategory" asp-route-typecategory="@item.TypeCategory.Alias">Xem tất cả</a>
            </div>
        }

        @if (Model.AoPolo.Count > 0)
        {
            @foreach (var item in Model.AoPolo)
            {
                <p class="title-layout">@item.TypeCategory.CategoryName</p>
                <div class="carousel" data-bs-ride="carousel">
                    <div class="carousel-inner mb-4">
                        <div class="carousel-item active">
                            <img src="https://media.canifa.com/Simiconnector/2.Polo_home_desktop-20.07.webp" class="d-block w-100" alt="...">
                        </div>
                    </div>
                </div>
                <div class="grid-container-4 grid-container">
                    @await Html.PartialAsync("ProductItem", item.ProductTypeCats)
                </div>
                <div class="text-center">
                    <a class="btn__add__outline" href="@Url.Action("ProductTypeCategory", "Product", new { typecategory = @item.TypeCategory.Alias, cat = "" })">Xem tất cả</a>
                </div>
            }
        }
        else
        {
            <div>Không có sản phẩm nào</div>
        }

        @if (Model.QuanShorts.Count > 0)
        {
            @foreach (var item in Model.QuanShorts)
            {
                <p class="title-layout">@item.TypeCategory.CategoryName</p>
                <div class="carousel" data-bs-ride="carousel">
                    <div class="carousel-inner mb-4">
                        <div class="carousel-item active">
                            <img src="https://media.canifa.com/Simiconnector/3.Short_home_desktop-20.07.webp" class="d-block w-100" alt="...">
                        </div>
                    </div>
                </div>
                <div class="grid-container-4 grid-container">
                    @await Html.PartialAsync("ProductItem", item.ProductTypeCats)
                </div>
                <div class="text-center">
                    <a class="btn__add__outline" asp-controller="Product" asp-action="ProductTypeCategory" asp-route-typecategory="@item.TypeCategory.Alias">Xem tất cả</a>
                </div>
            }
        }
        else
        {
            <div>Không có sản phẩm nào</div>
        }
        @if (Model.Vay.Count > 0)
        {
            @foreach (var item in Model.Vay)
            {
                <p class="title-layout">@item.TypeCategory.CategoryName</p>
                <div class="carousel" data-bs-ride="carousel">
                    <div class="carousel-inner mb-4">
                        <div class="carousel-item active">
                            <img src="https://media.canifa.com/Simiconnector/4.Vay_home_desktop-20.07.webp" class="d-block w-100" alt="...">
                        </div>
                    </div>
                </div>
                <div class="grid-container-4 grid-container">
                    @await Html.PartialAsync("ProductItem", item.ProductTypeCats)
                </div>
                <div class="text-center">
                    <a class="btn__add__outline" asp-controller="Product" asp-action="ProductTypeCategory" asp-route-typecategory="@item.TypeCategory.Alias">Xem tất cả</a>
                </div>
            }
        }
        else
        {
            <div>Không có sản phẩm nào</div>
        }

    </div>
</section>
<!-- Product Section End -->


<!-- Latest Blog Section Begin -->
<section class="latest spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Tin mới nhất</span>
                    <h2>Thời trang xu hướng mới</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model.Blogs.Count > 0)
            {
                @foreach (var item in Model.Blogs)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic set-bg" data-setbg="@item.Thumb"></div>
                            <div class="blog__item__text">
                                <span><img src="img/icon/calendar.png" alt=""> @item.DateCreated.ToString("dd/MM/yyyy HH:mm")</span>
                                <h5>@item.Title</h5>
                                <a asp-controller="blog" asp-action="detail" asp-route-id="@item.BlogId">Đọc thêm</a>
                            </div>
                        </div>
                    </div>
                }
            }


        </div>
    </div>
</section>
<!-- Latest Blog Section End -->
